<!-- if cabinet is occupied by Plant -->

<%- if cabinet.occupiable_type == 'Plant' %>

  <h4>
    Species:
    <strong><%= link_to cabinet.occupiable.name, plant_path(cabinet.occupiable) %></strong>
    <%= link_to 'Edit', edit_cabinet_path(cabinet), class: 'btn btn-sm btn-primary pull-right' %>
  </h4>

  <p>Green: <%= cabinet.occupiable.is_green ? 'Yes' : 'No' %></p> 

  <p>Flowering: <%= cabinet.occupiable.is_flowering ? 'Yes' : 'No' %></p> 

<!-- if cabinet is occupied by Animal -->

<%- else %>

  <h4>
    <strong><%= link_to cabinet.occupiable.name, animal_path(cabinet.occupiable) %></strong>
    <%= link_to 'Edit', edit_cabinet_path(cabinet), class: 'btn btn-sm btn-primary pull-right' %>    
  </h4>

  <p>Gender: <%= cabinet.occupiable.gender %></p> 

  <p>No. of Legs: <%= cabinet.occupiable.legs %></p> 

<%- end %>

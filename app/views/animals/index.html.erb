<div class='page-header'>
  <div class='container'>
    <h1>Animals</h1>
  </div>
</div>

<div class='container'>
  <div class='panel panel-default'>

    <div class='panel-heading'>
      <h2>All Animals</h2>
    </div>

    <div class='panel-body table-responsive'>
      <table class='table table-default'>

        <thead>
          <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>No. of Legs</th>
          </tr>
        </thead>

        <tbody>
          <%- @animals.each do |animal| %>
            <tr>
              <td><%= animal.name %></td>
              <td><%= animal.gender %></td>
              <td><%= animal.legs %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>

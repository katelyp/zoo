<div class='page-header'>
  <div class='container'>
    <h1>All Animals</h1>
  </div>
</div>

<div class='container'>
  <div class='panel panel-default'>

    <div class='panel-body table-responsive'>
      <table class='table table-default'>

        <thead>
          <tr>
            <th>Name</th>
            <th>Class</th>
            <th>No. of Legs</th>
          </tr>
        </thead>

        <tbody>
          <%- @animals.each do |animal| %>
            <tr>
              <td><%= link_to animal.name, animal_path(animal) %></td>
              <td><%= animal.classification %></td>
              <td><%= animal.legs %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>
